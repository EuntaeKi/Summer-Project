<?xml version="1.0" encoding="utf-8"?>
<!-- Overall Structure Container -->
<!-- For "Main" Activity-->
<!-- Contains Setting Button, Search Bar -->
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- Setting Icon -->
    <ImageView
            android:id="@+id/settingButton"
            android:src="@drawable/baseline_settings_black_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <!-- Search Bar -->
    <android.support.v7.widget.Toolbar
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="10dp">

        <!-- Horizontal Container for Search Bar -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center|end">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:gravity="center|end">
                <EditText
                        android:id="@+id/editMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:ems="10"
                        android:hint="Search for a recipe"
                        android:drawableLeft="@drawable/baseline_search_black_18"
                        android:gravity="center" >
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>